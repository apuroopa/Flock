@model dynamic
@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}
<div class="container" ng-controller="messageController">
    <div class="row-fluid">
        <div class="span5">
            <h3>Welcome, Let's flock together</h3>
        </div>
        <div class="span3">
            <h3><img src="~/Content/Images/flock.png" width="100px" height="100px" /></h3>
        </div>
    </div>
    <div ng-repeat="message in messages">
        <div class="row-fluid">
            <div class="span4">{{message.createDateTime}}</div>
            <div id="cheersLikeIt" ng-show="message.isLiked" class="span4 show"><img height="30px" width="30px" src="~/Content/Images/Thumbsup.jpg" /></div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <blockquote>
                    <p>{{message.message}} </p>
                    <small>{{message.createUserId}}</small>
                </blockquote>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span4">
                <a href="#shoutOutLoudWindows" data-toggle="modal"><i class="icon-bullhorn"></i> Shout out loud</a>
            </div>
            <div class="span4">
                <a href="" ng-click="toggleLike(message)"> <i class="icon-glass"></i> Cheers, like it! </a>
            </div>
        </div>
        <hr />
    </div>

    <div id="shoutOutLoudWindows" class="modal hide fade">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Good find, let's share...</h3>
        </div>
        <div class="modal-body row-fluid">
            <textarea class="span10"  rows="3">AnOriginalAuthor says, "sample original message here..."</textarea>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-primary">Shout out loud</a>
        </div>
    </div>

</div>